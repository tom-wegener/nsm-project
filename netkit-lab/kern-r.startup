ip link set eth0 up
ip link set eth1 up
ip link set eth2 up
ip link set eth3 up

ip address add 10.0.0.10 dev eth0 #darkfiber
ip address add 10.0.0.11 dev eth1 #dmz
ip address add 10.0.0.12 dev eth2 #server
ip address add 10.0.0.13 dev eth3 #client

route add -host 10.0.0.21 gw 10.0.0.10 dev eth0 #darkfiber
route add -host 10.0.0.31 gw 10.0.0.11 dev eth1 #dmz
route add -host 10.0.0.40 gw 10.0.0.12 dev eth2 #server
route add -host 10.0.0.50 gw 10.0.0.13 dev eth3 #client

route add -net default gw 10.0.0.21 dev eth0 #darkfiber
route add -net 10.0.1.0/24 gw 10.0.0.31 dev eth1 #dmz
route add -net 10.0.2.0/24 gw 10.0.0.40 dev eth2 #server
route add -net 10.0.3.0/24 gw 10.0.0.50 dev eth3 #client


